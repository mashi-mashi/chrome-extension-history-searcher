{
  "manifest_version": 2,
  "name": "history-searcher",
  "description": "ddd",
  "version": "1",
  "browser_action": {
    "default_popup": "popup.html"
  },
  // "content_scripts": [
  //   {
  //     "matches": ["http://*/*", "https://*/*"],
  //     "js": ["main.js"]
  //   }
  // ],
  "commands": {
    "run-searcher": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Run",
      "global": true
    }
    // "list-tabs": {
    //   "suggested_key": {
    //     "default": "Ctrl+Shift+3",
    //     "mac": "Command+Shift+L"
    //   },
    //   "description": "list tabs"
    // }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "tabs",
    "history",
    "commands",
    "http://*/*",
    "https://*/*",
    "bookmarks"
  ],
  // "host_permissions": [
  //   "https://github-readme-stats.vercel.app/*"
  // ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
